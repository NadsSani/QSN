                        android:textAlignment="textStart"
                        android:textColor="#939393"
                        android:textColorHint="#ffff"
                        tools:layout_editor_absoluteY="152dp">

                    </EditText>


                    <EditText
                        android:id="@+id/textField6"
                        android:layout_width="match_parent"
