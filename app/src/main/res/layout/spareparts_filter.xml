<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundcolor"
            tools:context=".ui.carlist.cars.FilterFrag">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="127dp" />

            <TextView
                android:id="@+id/textView125"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="120dp"
                android:text="Spare Parts"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toStartOf="@+id/closebtmrentfilter"
                app:layout_constraintHorizontal_bias="0.991"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="352dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Filter"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.446" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="@+id/guideline20"
                tools:layout_editor_absoluteX="205dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="73dp">


                    <Button
                        android:id="@+id/textField1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/backforfilterbutton"
                        android:drawableStart="@drawable/cariconlist"
                        android:drawableEnd="@drawable/path_3716"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:text="   Car"
                        android:textAlignment="textStart"
                        android:textColor="#939393"
                        android:textColorHint="#ffff"
                        tools:layout_editor_absoluteY="152dp">

                    </Button>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/textField8"
                            android:layout_width="170dp"
                            android:layout_height="56dp"
                            android:background="@drawable/backforfilterbutton"
                            android:drawableStart="@drawable/price_tag"
                            android:drawableEnd="@drawable/path_3716"
                            android:paddingStart="15dp"
                            android:paddingEnd="12dp"
                            android:text="      Price From"
                            android:textAlignment="textStart"
                            android:textColor="#939393"
                            android:textColorHint="#ffff"
                            tools:layout_editor_absoluteY="152dp">

                        </Button>


                        <Button
                            android:id="@+id/textField9"
                            android:layout_width="170dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/backforfilterbutton"
                            android:drawableStart="@drawable/price_tag"
                            android:drawableEnd="@drawable/path_3716"
                            android:paddingStart="10dp"
                            android:paddingEnd="30dp"
                            android:text="      Price to"
                            android:textAlignment="textStart"
                            android:textColor="#939393"
                            android:textColorHint="#ffff"
                            tools:layout_editor_absoluteY="152dp">

                        </Button>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"

                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:buttonTint="#ffff"
                            android:paddingEnd="20dp"
                            android:text="  New"
                            android:textAlignment="textStart"
                            android:textColor="#939393"
                            android:textColorHint="#ffff"
                            tools:layout_editor_absoluteY="152dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"

                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:buttonTint="#ffff"
                            android:paddingEnd="20dp"
                            android:text="  Used"
                            android:textAlignment="textStart"
                            android:textColor="#939393"
                            android:textColorHint="#ffff"
                            tools:layout_editor_absoluteY="152dp" />
                    </LinearLayout>
                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bidbuttonback"
                        android:text="Apply" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/grid"></View>


                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/closebtmrentfilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.46"
                app:srcCompat="@drawable/closebutton" />

            <TextView
                android:id="@+id/textView128"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.661"
                app:layout_constraintStart_toEndOf="@+id/textView125"
                app:layout_constraintTop_toBottomOf="@+id/closebtmrentfilter"
                app:layout_constraintVertical_bias="0.677" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>