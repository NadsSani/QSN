<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/grid"
            tools:context=".ui.auctionlist.FeatureListed">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="374dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="73dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:paddingBottom="35dp"
                app:layout_constraintTop_toTopOf="@+id/guideline20"
                tools:layout_editor_absoluteX="205dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="73dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="Listed"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton4"
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:buttonTint="@color/colorgrey"
                            android:text="Cars"
                            android:textColor="@color/colorgrey" />

                        <RadioButton
                            android:id="@+id/radioButton7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:buttonTint="@color/colorgrey"
                            android:text="Spare Parts"
                            android:textColor="@color/colorgrey" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout

                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/backforedit"
                        android:textColorHint="@color/textcolor"
                        app:endIconDrawable="@drawable/downarrow"
                        app:hintTextColor="@color/textcolor"
                        app:layout_constraintBottom_toTopOf="@+id/guideline8"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.493"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/guideline32"
                        app:layout_constraintVertical_bias="0.789">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#070B1F32"
                            android:fontFamily="@font/helveticaneuelight"
                            android:hint="  Mobile/Number Plate"
                            android:inputType="phone"
                            android:textColor="@color/textcolor"
                            android:textColorHint="@color/textcolor"
                            android:textSize="12sp"
                            tools:layout_editor_absoluteX="79dp"
                            tools:layout_editor_absoluteY="558dp" />
                    </com.google.android.material.textfield.TextInputLayout>



                    <TextView
                        android:id="@+id/textField1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="10dp"
                        android:paddingTop="18dp"
                        android:paddingEnd="20dp"
                        android:text="Packages"
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="115dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="20dp"
                            app:cardBackgroundColor="@color/cardbackground"
                            app:cardCornerRadius="8dp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/qr50"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="QR:50"
                                    android:textAlignment="center"
                                    android:textColor="@color/qsnyellow"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/week1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1 Week"
                                    android:textAlignment="center"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            app:cardBackgroundColor="@color/cardbackground"
                            app:cardCornerRadius="8dp"

                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/qr80"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="QR:80"
                                    android:textAlignment="center"
                                    android:textColor="@color/qsnyellow"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/weeks2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2 Week"
                                    android:textAlignment="center"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="15dp"
                            app:cardBackgroundColor="@color/cardbackground"
                            app:cardCornerRadius="8dp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:textAlignment="center">

                                <TextView
                                    android:id="@+id/textView92"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="QR:150"
                                    android:textAlignment="center"
                                    android:textColor="@color/qsnyellow"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/textView91"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="1 Month"
                                    android:textAlignment="center"
                                    android:textColor="@color/white" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/textField3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="15dp"
                        android:paddingTop="25dp"
                        android:paddingEnd="20dp"
                        android:text=" Payment Method"
                        android:textAlignment="textStart"
                        android:textColor="#939393"
                        android:textColorHint="#ffff"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/textField4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:paddingStart="25dp"
                        android:paddingEnd="20dp"
                        android:text="Enter your card details"
                        android:textAlignment="textStart"
                        android:textColor="#939393">
                    </TextView>

                    <LinearLayout
                        android:id="@+id/textField7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/textField5"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/backforedit"
                            android:buttonTint="@color/white"
                            android:layoutDirection="rtl"
                            android:paddingEnd="8dp"
                            android:text="  Debit Card"
                            android:textAlignment="textStart"
                            android:textColor="#939393">

                        </RadioButton>

                        <RadioButton
                            android:id="@+id/textField6"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_gravity="start"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/backforedit"
                            android:buttonTint="@color/white"
                            android:layoutDirection="rtl"
                            android:paddingEnd="8dp"
                            android:text="  Credit Card"
                            android:textAlignment="textStart"
                            android:textColor="#939393">

                        </RadioButton>

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/backforedit"
                            android:textColorHint="@color/textcolor"
                            app:hintTextColor="@color/textcolor"
                            app:layout_constraintBottom_toTopOf="@+id/guideline8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.493"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/guideline32"
                            app:layout_constraintVertical_bias="0.789">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#070B1F32"
                                android:fontFamily="@font/helveticaneuelight"
                                android:hint="Card Holder Name"
                                android:inputType="phone"
                                android:paddingStart="10dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/textcolor"
                                tools:layout_editor_absoluteX="79dp"
                                tools:layout_editor_absoluteY="558dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout

                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/backforedit"
                            android:textColorHint="@color/textcolor"
                            app:hintTextColor="@color/textcolor"
                            app:layout_constraintBottom_toTopOf="@+id/guideline8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.493"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/guideline32"
                            app:layout_constraintVertical_bias="0.789">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#070B1F32"
                                android:drawableEnd="@drawable/featuredrawable"
                                android:fontFamily="@font/helveticaneuelight"

                                android:hint="Card Number"
                                android:inputType="phone"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/textcolor"
                                tools:layout_editor_absoluteX="79dp"
                                tools:layout_editor_absoluteY="558dp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/textField8"
                                android:layout_width="178dp"
                                android:layout_height="56dp"
                                android:background="@drawable/backforfilterbutton"
                                android:orientation="vertical">

                                <com.google.android.material.textfield.TextInputLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:background="@drawable/backforedit"
                                    android:textColorHint="@color/textcolor"
                                    app:hintTextColor="@color/textcolor"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline8"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.493"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/guideline32"
                                    app:layout_constraintVertical_bias="0.789">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#070B1F32"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:hint="Expiry Date"
                                        android:inputType="phone"
                                        android:paddingStart="10dp"
                                        android:textColor="@color/textcolor"
                                        android:textColorHint="@color/textcolor"
                                        tools:layout_editor_absoluteX="79dp"
                                        tools:layout_editor_absoluteY="558dp" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/textField9"
                                android:layout_width="178dp"
                                android:layout_height="56dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/backforfilterbutton"
                                android:orientation="vertical"
                                tools:layout_editor_absoluteY="152dp">

                                <com.google.android.material.textfield.TextInputLayout

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/backforedit"
                                    android:paddingStart="10dp"
                                    android:paddingEnd="5dp"
                                    android:textColorHint="@color/textcolor"
                                    app:hintTextColor="@color/textcolor"
                                    app:layout_constraintBottom_toTopOf="@+id/guideline8"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.493"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="@+id/guideline32"
                                    app:layout_constraintVertical_bias="0.789">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="#070B1F32"
                                        android:fontFamily="@font/helveticaneuelight"
                                        android:hint="Cvv"
                                        android:inputType="phone"
                                        android:textColor="@color/textcolor"
                                        android:textColorHint="@color/textcolor"
                                        tools:layout_editor_absoluteX="79dp"
                                        tools:layout_editor_absoluteY="558dp" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bidbuttonback"
                            android:text="Pay Now"
                            android:textColor="#FAFAFA" />
                    </LinearLayout>









                </LinearLayout>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>