<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/backgroundcolor"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grid"
            tools:context=".ui.carlist.rentacar.RentACarFilter">


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="109dp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="352dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Filter"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.446" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="@+id/guideline20"
                tools:layout_editor_absoluteX="205dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="73dp">


                    <EditText
                        android:id="@+id/textField"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/backforfilterbutton"
                        android:drawableStart="@drawable/vehicletype"
                        android:drawableEnd="@drawable/path_3716"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:text="    Vehicle Type"
                        android:textAlignment="textStart"
                        android:textColor="#ffff"
                        android:textColorHint="#ffff"
                        tools:layout_editor_absoluteY="152dp">

                    </EditText>


                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/textField1"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/backforfilterbutton"
                        android:drawableStart="@drawable/cariconlist"
                        android:drawableEnd="@drawable/path_3716"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:text="    Make"
                        android:textAlignment="textStart"
                        android:textColor="#939393"
                        android:textColorHint="#ffff"
                        tools:layout_editor_absoluteY="152dp">

                    </EditText>


                    <EditText
                        android:layout_marginTop="10dp"
                        android:id="@+id/textField7"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/backforfilterbutton"
                        android:drawableStart="@drawable/location"
                        android:drawableEnd="@drawable/path_3716"
                        android:paddingStart="30dp"
                        android:paddingEnd="20dp"
                        android:text="      Location"
                        android:textAlignment="textStart"
                        android:textColor="#939393"
                        android:textColorHint="#ffff"
                        tools:layout_editor_absoluteY="152dp">

                    </EditText>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/textField8"
                            android:layout_width="170dp"
                            android:layout_height="56dp"
                            android:background="@drawable/backforfilterbutton"
                            android:drawableStart="@drawable/price_tag"
                            android:drawableEnd="@drawable/path_3716"
                            android:paddingStart="15dp"
                            android:paddingEnd="12dp"
                            android:text="  Price From"
                            android:textAlignment="textStart"
                            android:textColor="#939393"
                            android:textColorHint="#ffff"
                            tools:layout_editor_absoluteY="152dp">

                        </EditText>


                        <EditText
                            android:id="@+id/textField9"
                            android:layout_width="170dp"
                            android:layout_height="56dp"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/backforfilterbutton"
                            android:drawableStart="@drawable/price_tag"
                            android:drawableEnd="@drawable/path_3716"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:text="  Price to"
                            android:textAlignment="textStart"
                            android:textColor="#939393"
                            android:textColorHint="#ffff"
                            tools:layout_editor_absoluteY="152dp">

                        </EditText>

                    </LinearLayout>

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bidbuttonback"
                        android:text="Apply" />


                </LinearLayout>
            </ScrollView>

            <ImageView
                android:id="@+id/closebtmrentfilter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="10dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.431"
                app:srcCompat="@drawable/closebutton" />

            <TextView
                android:id="@+id/textView130"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Rent a Car"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toStartOf="@+id/closebtmrentfilter"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toEndOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear All"
                android:textColor="@color/qsnyellow"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline20"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toEndOf="@+id/textView130"
                app:layout_constraintTop_toBottomOf="@+id/closebtmrentfilter"
                app:layout_constraintVertical_bias="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>